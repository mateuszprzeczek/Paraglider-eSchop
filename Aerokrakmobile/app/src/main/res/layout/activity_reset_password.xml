<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buyer.ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/rel_layout123"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/reset_password_page_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />


    </RelativeLayout>


    <EditText
        android:id="@+id/find_email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please write Your Email Address"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="14dp"
        android:layout_below="@+id/rel_layout123"
        />

    <TextView
        android:id="@+id/title_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the Following Security Questions"
        android:gravity="center"
        android:layout_below="@+id/find_email_address"
        android:textSize="26sp"
        android:layout_marginTop="23dp"
        />

    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Where did You born"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="14dp"
        android:layout_below="@+id/title_questions"
        />

    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What is your mother's maiden name"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="14dp"
        android:layout_below="@+id/question_1"
        />

    <Button
        android:id="@+id/verify_reset_password_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="14dp"
        android:layout_margin="14dp"
        android:layout_below="@+id/question_2"
        android:text="Verify"
        />

    <TextView
        android:id="@+id/send_email_reset_password_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or send e-mail to change the password"
        android:gravity="center"
        android:layout_below="@+id/verify_reset_password_Button"
        android:textSize="20sp"
        android:layout_marginTop="23dp"
        />

    <Button
        android:id="@+id/send_email_reset_password_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="14dp"
        android:layout_margin="14dp"
        android:layout_below="@id/send_email_reset_password_text_view"
        android:text="send email"
        />

</RelativeLayout>