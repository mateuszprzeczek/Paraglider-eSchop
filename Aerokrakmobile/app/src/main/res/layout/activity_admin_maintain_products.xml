<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="20dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/maintain_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp" />

        <EditText
            android:id="@+id/maintain_product_name"
            android:layout_below="@id/maintain_product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:background="@drawable/input_design"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:elevation="@dimen/cardview_default_radius"
            />

        <EditText
            android:id="@+id/maintain_product_price"
            android:layout_below="@id/maintain_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Price"
            android:background="@drawable/input_design"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/maintain_product_description"
            android:layout_below="@id/maintain_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Description"
            android:background="@drawable/input_design"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/apply_changes_maintain_products_button"
            android:layout_below="@id/maintain_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Changes"
            android:background="@drawable/buttons"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:fontFamily="@android:string/ok"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/maintain_delete_products_button"
            android:layout_below="@id/apply_changes_maintain_products_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Delete This Product"
            android:background="@drawable/buttons"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:layout_margin="30dp"
            android:textAlignment="center"
            android:fontFamily="@android:string/ok"
            android:textSize="16sp"
            android:textColor="@android:color/black" />



    </RelativeLayout>






</androidx.cardview.widget.CardView>