<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slovenia_alps_paragliding"
    tools:context=".admin.AdminHomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Admin Home"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="70dp"
        />

    <Button
        android:id="@+id/admin_maintain_products_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admin_check_approve_products_button"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_margin="8dp"
        android:background="@drawable/input_design"
        android:textColor="@android:color/white"
        android:elevation="40dp"
        android:textStyle="bold"
        android:text="Maintain Products"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/admin_check_approve_products_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admin_check_orders_button"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_margin="8dp"
        android:background="@drawable/input_design"
        android:textColor="@android:color/white"
        android:elevation="40dp"
        android:textStyle="bold"
        android:text="Check and Approve New Products"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/admin_check_orders_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admin_logout_button"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="120dp"
        android:elevation="20dp"
        android:background="@drawable/input_design"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="Check New Orders"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/admin_logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="Logout"
        android:textSize="20sp"
        />


</RelativeLayout>