<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/slogan_category"
        android:layout_marginTop="25dp">

        <FrameLayout
            android:id="@+id/frame1_category_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

        <ImageView
            android:id="@+id/paragliders"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:src="@drawable/parachute">

        </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|bottom"
                android:text="Paralotnie"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame2_category_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/drives"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:src="@drawable/propeller"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginLeft="4dp"
                android:textStyle="bold"
                android:text="Napędy" />


        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/linear1_category_layout"
        android:layout_marginTop="45dp">

        <FrameLayout
            android:id="@+id/frame3_category_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/harnesses"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:src="@drawable/harness">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|bottom"
                android:text="Uprzęże"
                android:layout_marginStart="5dp"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame4_category_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/helmets"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:src="@drawable/shorty_helmet2"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="4dp"
                android:textStyle="bold"
                android:text="Kaski" />


        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/linear2_category_layout"
        android:layout_marginTop="45dp">

        <FrameLayout
            android:id="@+id/frame5_category_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/parachutes"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:src="@drawable/parachute_emergency">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|bottom"
                android:text="Spadochrony"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame6_category_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/walkie_talkie"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:src="@drawable/walkie_talkie"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginLeft="4dp"
                android:textStyle="bold"
                android:text="Elektronika" />


        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4_category_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/linear3_category_layout"
        android:layout_marginTop="45dp">

        <FrameLayout
            android:id="@+id/frame7_category_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/clothing"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_marginStart="60dp"
                android:src="@drawable/tshirts">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|bottom"
                android:text="Odzież"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame8_category_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/accessories"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_marginStart="35dp"
                android:src="@drawable/watches"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginLeft="4dp"
                android:textStyle="bold"
                android:text="Akcesoria" />


        </FrameLayout>


    </LinearLayout>


</RelativeLayout>